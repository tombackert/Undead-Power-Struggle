<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="538.0" prefWidth="961.0" styleClass="background-pane" stylesheets="@style_GameMenu.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ups.controller.GameMenuController">
   <top>
      <Pane prefHeight="50.0" prefWidth="50.0" BorderPane.alignment="CENTER" />
   </top>
   <left>
      <Pane prefHeight="50.0" prefWidth="50.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <Pane prefHeight="50.0" prefWidth="50.0" BorderPane.alignment="CENTER" />
   </right>
   <bottom>
      <Pane prefHeight="64.0" prefWidth="1424.0" BorderPane.alignment="CENTER">
      </Pane>
   </bottom>
   <center>
       <HBox styleClass="transparent-box" stylesheets="@style_GameMenu.css" BorderPane.alignment="CENTER">
           <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="822.0">
               <HBox alignment="CENTER_LEFT">
                   <VBox>
                       <HBox alignment="CENTER_LEFT">
                           <VBox alignment="CENTER_LEFT">
                               <TextField fx:id="player1Field" promptText="Spieler 1 Name" />
                               <TextField fx:id="player2Field" promptText="Spieler 2 Name" />
                               <TextField fx:id="player3Field" promptText="Spieler 3 Name" />
                               <TextField fx:id="player4Field" promptText="Spieler 4 Name" />
                           </VBox>
                           <VBox prefHeight="104.0" prefWidth="181.0">
                               <ComboBox fx:id="color1ComboBox" promptText="Farbe auswählen">
                                   <items>
                                       <FXCollections fx:factory="observableArrayList">
                                           <String fx:value="Farbe auswählen" />
                                           <String fx:value="Rot" />
                                           <String fx:value="Schwarz" />
                                           <String fx:value="Blau" />
                                           <String fx:value="Orange" />
                                       </FXCollections>
                                   </items>
                           <VBox.margin>
                              <Insets top="4.0" />
                           </VBox.margin>
                               </ComboBox>
                               <ComboBox fx:id="color2ComboBox" promptText="Farbe auswählen">
                                   <items>
                                       <FXCollections fx:factory="observableArrayList">
                                           <String fx:value="Farbe auswählen" />
                                           <String fx:value="Rot" />
                                           <String fx:value="Schwarz" />
                                           <String fx:value="Blau" />
                                           <String fx:value="Orange" />
                                       </FXCollections>
                                   </items>
                               </ComboBox>
                               <ComboBox fx:id="color3ComboBox" promptText="Farbe auswählen">
                                   <items>
                                       <FXCollections fx:factory="observableArrayList">
                                           <String fx:value="Farbe auswählen" />
                                           <String fx:value="Rot" />
                                           <String fx:value="Schwarz" />
                                           <String fx:value="Blau" />
                                           <String fx:value="Orange" />
                                       </FXCollections>
                                   </items>
                               </ComboBox>
                               <ComboBox fx:id="color4ComboBox" promptText="Farbe auswählen">
                                   <items>
                                       <FXCollections fx:factory="observableArrayList">
                                           <String fx:value="Farbe auswählen" />
                                           <String fx:value="Rot" />
                                           <String fx:value="Schwarz" />
                                           <String fx:value="Blau" />
                                           <String fx:value="Orange" />
                                       </FXCollections>
                                   </items>
                               </ComboBox>
                           </VBox>
                           <VBox prefHeight="104.0" prefWidth="187.0">
                               <CheckBox fx:id="aiPlayer1" mnemonicParsing="false" styleClass="white-background-vbox" stylesheets="@style_GameMenu.css" text="Computergegner 1">
                                   <padding>
                                       <Insets bottom="5.0" top="5.0" />
                                   </padding>
                               </CheckBox>
                               <CheckBox fx:id="aiPlayer2" mnemonicParsing="false" styleClass="white-background-vbox" stylesheets="@style_GameMenu.css" text="Computergegner 2">
                                   <padding>
                                       <Insets bottom="3.0" top="3.0" />
                                   </padding>
                               </CheckBox>
                               <CheckBox fx:id="aiPlayer3" mnemonicParsing="false" styleClass="white-background-vbox" stylesheets="@style_GameMenu.css" text="Computergegner 3">
                                   <padding>
                                       <Insets bottom="3.0" top="3.0" />
                                   </padding>
                               </CheckBox>
                               <CheckBox fx:id="aiPlayer4" mnemonicParsing="false" styleClass="white-background-vbox" stylesheets="@style_GameMenu.css" text="Computergegner 4">
                                   <padding>
                                       <Insets bottom="5.0" top="5.0" />
                                   </padding>
                               </CheckBox>
                           </VBox>
                           <opaqueInsets>
                               <Insets />
                           </opaqueInsets>
                       </HBox>
                       <HBox alignment="CENTER_LEFT">
                           <VBox prefHeight="202.0" prefWidth="126.0">
                               <Button fx:id="loadGameState" prefHeight="26.0" prefWidth="79.0" text="Laden">
                                   <VBox.margin>
                                       <Insets bottom="10.0" top="10.0" />
                                   </VBox.margin>
                               </Button>
                               <Button fx:id="saveGameState" text="Speichern" />
                           </VBox>
                           <VBox prefHeight="202.0" prefWidth="193.0">
                               <Button fx:id="highscoreButton" onAction="#showHighscore" prefHeight="26.0" prefWidth="172.0" text="Highscore anzeigen">
                                   <VBox.margin>
                                       <Insets top="10.0" />
                                   </VBox.margin>
                               </Button>
                           </VBox>
                           <VBox prefHeight="172.0" prefWidth="155.0">
                               <MenuButton fx:id="languageButton" text="Sprache wählen">
                                   <items>
                                       <MenuItem mnemonicParsing="false" text="Deutsch" />
                                       <MenuItem mnemonicParsing="false" text="English" />
                                   </items>
                                   <VBox.margin>
                                       <Insets top="10.0" />
                                   </VBox.margin>
                               </MenuButton>
                               <MenuButton fx:id="themeButton" text="Theme wählen">
                                   <items>
                                       <MenuItem fx:id="theme_horror" mnemonicParsing="false" text="Horror" />
                                       <MenuItem fx:id="theme_blood" mnemonicParsing="false" text="Blut" />
                                   </items>
                                   <VBox.margin>
                                       <Insets top="10.0" />
                                   </VBox.margin>
                               </MenuButton>
                           </VBox>
                           <padding>
                               <Insets top="20.0" />
                           </padding>
                       </HBox>
                       <HBox alignment="CENTER_LEFT">
                           <VBox alignment="CENTER" prefHeight="54.0" prefWidth="461.0">
                               <TextField fx:id="settlementsCount" alignment="CENTER" prefHeight="26.0" prefWidth="242.0" promptText="Anzahl der Siedlungen im Vorrat (Standard: 40)">
                                   <opaqueInsets>
                                       <Insets right="10.0" />
                                   </opaqueInsets>
                                   <VBox.margin>
                                       <Insets bottom="20.0" />
                                   </VBox.margin>
                               </TextField>
                               <TextField fx:id="settlementsPerTurn" alignment="CENTER" prefHeight="26.0" prefWidth="333.0" promptText="Siedlungen pro Spielzug (Standard: 3)" />
                           </VBox>
                           <padding>
                               <Insets top="20.0" />
                           </padding>
                       </HBox>
                       <HBox prefHeight="100.0" prefWidth="200.0">
                           <HBox alignment="CENTER_LEFT">
                               <Button fx:id="newGameButton" alignment="CENTER" contentDisplay="CENTER" onAction="#startNewGame" text="Neues Spiel">
                                   <HBox.margin>
                                       <Insets right="50.0" />
                                   </HBox.margin>
                               </Button>
                               <Button fx:id="continueGameButton" alignment="CENTER" contentDisplay="CENTER" onAction="#continueGame" text="Weiter spielen">
                                   <HBox.margin>
                                       <Insets right="50.0" />
                                   </HBox.margin>
                               </Button>
                               <Button fx:id="exitGameButton" alignment="CENTER" contentDisplay="CENTER" onAction="#exitGame" text="Zurück zum Hauptmenu" />
                               <padding>
                                   <Insets top="50.0" />
                               </padding>
                           </HBox>
                       </HBox>
                   </VBox>
                   <VBox.margin>
                       <Insets />
                   </VBox.margin>
               </HBox>
               <opaqueInsets>
                   <Insets />
               </opaqueInsets>
               <padding>
                   <Insets left="30.0" />
               </padding>
            <HBox.margin>
               <Insets bottom="30.0" top="30.0" />
            </HBox.margin>
           </VBox>
           <VBox alignment="TOP_CENTER" prefHeight="362.0" prefWidth="422.0">
               <HBox>
                   <VBox.margin>
                       <Insets />
                   </VBox.margin>
                   <VBox>
                       <HBox>
                           <VBox>
                               <Label text="Wähle die Anzahl an Siegbedingungen:" wrapText="true">
                                   <VBox.margin>
                                       <Insets />
                                   </VBox.margin>
                               </Label>
                               <Spinner fx:id="cardCountSpinner" initialValue="3" max="10" min="1" />
                               <Button onAction="#generateSpinners" text="Anzahl an Karten" />
                               <VBox fx:id="spinnerContainer" spacing="10">
                                   <VBox.margin>
                                       <Insets top="20.0" />
                                   </VBox.margin>
                               </VBox>
                           </VBox>
                       </HBox>
                   </VBox>
               </HBox>
            <HBox.margin>
               <Insets top="30.0" />
            </HBox.margin> <!-- Container für dynamische Spinner -->
           </VBox>
       </HBox>
   </center>
</BorderPane>
