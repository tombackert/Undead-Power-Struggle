<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="418.0" prefWidth="629.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ups.controller.GameMenuController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <HBox prefHeight="100.0" prefWidth="200.0">
        <VBox prefHeight="104.0" prefWidth="230.0">
            <TextField fx:id="player1Field" promptText="Spieler 1 Name" />
            <TextField fx:id="player2Field" promptText="Spieler 2 Name" />
            <TextField fx:id="player3Field" promptText="Spieler 3 Name" />
            <TextField fx:id="player4Field" promptText="Spieler 4 Name" />
        </VBox>
        <VBox prefHeight="104.0" prefWidth="181.0">
            <ComboBox fx:id="color1ComboBox" promptText="Farbe auswählen">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Rot" />
                        <String fx:value="Schwarz" />
                        <String fx:value="Blau" />
                        <String fx:value="Orange" />
                    </FXCollections>
                </items>
            </ComboBox>
            <ComboBox fx:id="color2ComboBox" promptText="Farbe auswählen">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Rot" />
                        <String fx:value="Schwarz" />
                        <String fx:value="Blau" />
                        <String fx:value="Orange" />
                    </FXCollections>
                </items>
            </ComboBox>
            <ComboBox fx:id="color3ComboBox" promptText="Farbe auswählen">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Rot" />
                        <String fx:value="Schwarz" />
                        <String fx:value="Blau" />
                        <String fx:value="Orange" />
                    </FXCollections>
                </items>
            </ComboBox>
            <ComboBox fx:id="color4ComboBox" promptText="Farbe auswählen">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Rot" />
                        <String fx:value="Schwarz" />
                        <String fx:value="Blau" />
                        <String fx:value="Orange" />
                    </FXCollections>
                </items>
            </ComboBox>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0">
            <CheckBox fx:id="aiPlayer1" mnemonicParsing="false" text="AIPlayer 1">
                <padding>
                    <Insets bottom="5.0" top="5.0"/>
                </padding>
            </CheckBox>
            <CheckBox fx:id="aiPlayer2" mnemonicParsing="false" text="AIPlayer 2">
                <padding>
                    <Insets bottom="3.0" top="3.0"/>
                </padding>
            </CheckBox>
            <CheckBox fx:id="aiPlayer3" mnemonicParsing="false" text="AIPlayer 3">
                <padding>
                    <Insets bottom="3.0" top="3.0"/>
                </padding>
            </CheckBox>
            <CheckBox fx:id="aiPlayer4" mnemonicParsing="false" text="AIPlayer 4">
                <padding>
                    <Insets bottom="5.0" top="5.0"/>
                </padding>
            </CheckBox>
        </VBox>
    </HBox>
    <HBox prefHeight="202.0" prefWidth="609.0">
        <VBox prefHeight="202.0" prefWidth="126.0">
            <Button fx:id="loadGameState" prefHeight="26.0" prefWidth="79.0" text="Laden">
                <VBox.margin>
                    <Insets bottom="10.0" top="10.0"/>
                </VBox.margin>
            </Button>
            <Button fx:id="saveGameState" text="Speichern"/>
        </VBox>
        <VBox prefHeight="202.0" prefWidth="193.0">
            <Button fx:id="highscoreButton" prefHeight="26.0" prefWidth="142.0" onAction="#showHighscore" text="Highscore anzeigen">
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </Button>
        </VBox>
        <VBox prefHeight="202.0" prefWidth="152.0">
            <MenuButton fx:id="languageButton" text="Sprache wählen">
                <items>
                    <MenuItem mnemonicParsing="false" text="Deutsch"/>
                    <MenuItem mnemonicParsing="false" text="English"/>
                </items>
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </MenuButton>
            <MenuButton fx:id="themeButton" text="Theme wählen">
                <items>
                    <MenuItem fx:id="theme_horror" mnemonicParsing="false" text="Horror"/>
                    <MenuItem fx:id="theme_blood" mnemonicParsing="false" text="Blut"/>
                </items>
                <VBox.margin>
                    <Insets top="10.0"/>
                </VBox.margin>
            </MenuButton>
        </VBox>
    </HBox>
    <HBox prefHeight="100.0" prefWidth="200.0">
        <VBox prefHeight="50.0" prefWidth="175.0">
            <TextField fx:id="settlementsCount" prefHeight="26.0" prefWidth="179.0" promptText="Anzahl der Siedlungen">
                <opaqueInsets>
                    <Insets right="10.0"/>
                </opaqueInsets>
                <VBox.margin>
                    <Insets right="20.0"/>
                </VBox.margin>
            </TextField>
        </VBox>
        <VBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="231.0">
            <TextField fx:id="settlementsPerTurn" alignment="CENTER" prefHeight="26.0" prefWidth="177.0"
                       promptText="Anzahl d. Siedlungen p. Spielzug (3)">
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </TextField>
        </VBox>
        <VBox prefHeight="50.0" prefWidth="98.0"/>
    </HBox>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
        <Button fx:id="newGameButton" alignment="CENTER" contentDisplay="CENTER" onAction="#startNewGame" text="Neues Spiel">
            <HBox.margin>
                <Insets right="50.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="continueGameButton" alignment="CENTER" contentDisplay="CENTER" onAction="#continueGame" text="Weiter spielen">
            <HBox.margin>
                <Insets right="50.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="exitGameButton" alignment="CENTER" contentDisplay="CENTER" onAction="#exitGame" text="Beenden"/>
    </HBox>
</VBox>
